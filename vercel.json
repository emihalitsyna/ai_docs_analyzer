{
  "version": 2,
  "builds": [
    { "src": "api/server.js", "use": "@vercel/node", "config": { "runtime": "nodejs20.x" } },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/server.js" },
    { "src": "/(.*)", "dest": "/public/index.html", "status": 200 }
  ]
} 